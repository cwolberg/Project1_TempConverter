<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wolberg.tempconverter.TempConverterActivity"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_logo"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fahrenheit"
        android:id="@+id/fahrenheitLabel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_above="@+id/celsiusTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celsius"
        android:id="@+id/celsiusLabel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/celsiusTextView"
        android:layout_alignBottom="@+id/celsiusTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Degrees"
        android:id="@+id/degreesLabel"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/celsius"
        android:id="@+id/celsiusTextView"
        android:textSize="18sp"
        android:layout_below="@+id/fahrenheitEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fahrenheitEditText"
        android:textSize="18sp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/degreesLabel"
        android:layout_toLeftOf="@+id/celsiusTextView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignLeft="@+id/degreesLabel"
        android:layout_alignStart="@+id/degreesLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text_bottom_border"
        android:layout_alignRight="@+id/fahrenheitEditText"
        android:layout_alignEnd="@+id/fahrenheitEditText" />

</RelativeLayout>
